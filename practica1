const int ledPIN= 3;// declaracion del puerto de salida en el arduino 
const int ledPIN1=5;// declaracion del puerto de salida 
void setup() {
  Serial.begin(9600);  
  pinMode(ledPIN,OUTPUT); //Configura el pin especificado para que se comporte como entrada o salida
  pinMode(ledPIN,OUTPUT);
  }

void loop() {
  digitalWrite (ledPIN,HIGH);// encendiendo la led1
  delay(8000);// tiempo de encendido 
  digitalWrite (ledPIN,LOW);// apagando led
  delay (700);// tiempo de apagado 
digitalWrite (ledPIN1,HIGH);// encendiendo led
  delay(8000);// tiempo de encendido 
  digitalWrite (ledPIN1,LOW);//apagando led 
  delay (700);// tiempo de apagado 
}
